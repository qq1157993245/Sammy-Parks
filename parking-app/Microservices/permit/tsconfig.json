{
    "compilerOptions": {
      "target": "ES2024",
      "module": "CommonJS",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "./build",
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"]
}