{
  "name": "registrar-api",
  "version": "1.2.0",
  "author": "Julian Cayanan",
  "license": "UNLICENSED",
  "repository": "none",
  "devDependencies": {
    "@eslint/js": "*",
    "@types/cors": "*",
    "@types/express": "*",
    "@types/jsonwebtoken": "*",
    "@types/node": "*",
    "@types/pg": "*",
    "@types/supertest": "*",
    "@types/swagger-ui-express": "*",
    "@vitest/coverage-v8": "*",
    "bestzip": "*",
    "concurrently": "*",
    "eslint": "*",
    "eslint-config-typescript": "*",
    "globals": "8",
    "joi": "*",
    "nodemon": "*",
    "supertest": "*",
    "ts-node": "*",
    "ts-postgres": "*",
    "typescript": "*",
    "typescript-eslint": "*",
    "vite-plugin-eslint": "*",
    "vitest": "*"
  },
  "dependencies": {
    "cors": "*",
    "dotenv": "*",
    "express": "*",
    "jsonwebtoken": "*",
    "pg": "*",
    "swagger-ui-express": "*",
    "tsoa": "*"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "scripts": {
    "start": "node build/src/server.js",
    "prebuild": "npm run swagger",
    "build": "tsc",
    "predev": "npm run swagger",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "swagger": "tsoa spec-and-routes",
    "pretest": "npm run swagger",
    "test": "vitest run --no-file-parallelism --testTimeout=3000 --coverage",
    "lint": "eslint test/**/*.[jt]s src/**/*.[jt]s --fix",
    "install": "cd ../ && npm install"
  }
}
